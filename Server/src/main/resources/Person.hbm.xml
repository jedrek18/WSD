<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.example.demo.Model.Person" table="mydb.Person">
        <meta attribute="class-description">
            This class contains the Person detail.
        </meta>
        <id name="id" column="id" type="int"></id>
        <property name="fistName" column="fistName" type="string"/>
        <property name="secondName" column="secondName" type="string"/>
        <property name="bornDate" column="bornDate" type="date"/>
        <property name="pesel" column="pesel" type="string"/>
    </class>
</hibernate-mapping>